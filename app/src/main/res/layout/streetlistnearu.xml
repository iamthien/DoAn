<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingRight="20dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_img"
                android:background="@drawable/locationicon"
                android:layout_marginLeft="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_street"
                android:layout_toEndOf="@id/location_img"
                android:layout_marginStart="10dp"
                android:text="@string/street_name"
                android:textAppearance="@style/the_number_"
                android:textSize="21sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_img"
                android:background="@drawable/car"
                android:layout_below="@id/location_img"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textAppearance="@style/the_number_"
                android:layout_toEndOf="@id/car_img"
                android:layout_marginStart="10dp"
                android:layout_below="@id/tv_street"
                android:layout_marginTop="2dp"
                android:text="@string/Distance_in"
                android:id="@+id/distanceIn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textAppearance="@style/the_number_"
                android:layout_toEndOf="@id/distanceIn"
                android:layout_marginStart="8dp"
                android:layout_below="@id/tv_street"
                android:layout_marginTop="2dp"
                android:text="@string/meters"
                android:id="@+id/distance"
                />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>