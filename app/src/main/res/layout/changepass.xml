<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:scaleType="centerCrop"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/banner_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/banner_changepass"
            android:textAppearance="@style/banner_logi"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@id/banner_setting"
            android:src="@drawable/arrow_back" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/man_with_headache"
            android:layout_centerHorizontal="true"
            android:id="@+id/man_with_headache_image"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/oldpassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:drawableEnd="@drawable/visibility_off"
            android:drawablePadding="5dp"
            android:hint="@string/enter_old_password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textColorHint="#C9000000"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/newpassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:drawableEnd="@drawable/visibility_off"
            android:drawablePadding="5dp"
            android:hint="@string/enter_new_password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textColorHint="#C9000000"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/renewpassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:drawableEnd="@drawable/visibility_off"
            android:drawablePadding="5dp"
            android:hint="@string/re_enter_new_password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:minHeight="48dp"
            android:padding="15dp"
            android:textColorHint="#C9000000"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        >
        <TextView
            android:id="@+id/you_should_change_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/you_should"
            android:textAppearance="@style/your_langua"
            android:gravity="center_horizontal|top"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/button4save"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/custom_orange_white"
            android:text="@string/save" android:textColor="#FFFFFF"
            android:textAppearance="@style/save"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_marginHorizontal="60dp"
        >
        <RelativeLayout
            android:id="@+id/tab_bar"
            android:layout_width="306dp"
            android:layout_height="43dp"
            android:background="@drawable/tab_bar"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:id="@+id/iconhome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/home"
                />

            <RelativeLayout
                android:id="@+id/iconsetting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/setting"
                />

            <RelativeLayout
                android:id="@+id/iconlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:layout_centerVertical="true"
                android:background="@drawable/location"  />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>