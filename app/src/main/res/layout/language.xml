<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:scaleType="centerCrop"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/banner_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/banner_language"
            android:textAppearance="@style/banner_logi"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="142dp"
            android:layout_toEndOf="@id/banner_setting"
            android:src="@drawable/arrow_back" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="89dp"
        android:text="@string/choose_lang"
        android:textSize="25sp"
        android:textAppearance="@style/chooselang"
        />
    <RelativeLayout
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle4language"
        android:layout_marginStart="88dp"
        android:layout_marginTop="68dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/englishlang"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:id="@+id/imageEnglish"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageEnglish"
            android:layout_marginStart="20dp"
            android:text="@string/english"
            android:textSize="24sp"
            android:id="@+id/english"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:button="@drawable/checkboxstate"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle4language"
        android:layout_marginStart="88dp"
        android:layout_marginTop="27dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vietnamese"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:id="@+id/imageVietnam"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageVietnam"
            android:layout_marginStart="20dp"
            android:text="@string/vietnam"
            android:textSize="24sp"
            android:id="@+id/Vietnam"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:button="@drawable/checkboxstate"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/your_langua"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="68dp"
        android:text="@string/your_langua"
        android:textAppearance="@style/your_langua"
        android:gravity="center_horizontal|top"
        android:textSize="16sp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="55dp"
        android:id="@+id/button4save"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/custom_orange_white"
            android:text="@string/save" android:textColor="#FFFFFF"
            android:textAppearance="@style/save"
            android:textSize="24sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_marginHorizontal="60dp"
        >
        <RelativeLayout
            android:id="@+id/tab_bar"
            android:layout_width="306dp"
            android:layout_height="43dp"
            android:background="@drawable/tab_bar"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:id="@+id/iconhome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/home"
                />
            <RelativeLayout
                android:id="@+id/iconsetting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/setting"
                 />
            <RelativeLayout
                android:id="@+id/iconlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:layout_centerVertical="true"
                android:background="@drawable/location"  />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>